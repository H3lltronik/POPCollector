    <div class="row">
        {% for product in products %}
            {% if product.isVisible %}
                <div class="col-12 col-lg-3">
                    {{render_product(product)}}
                </div>
            {% endif %}
        {% endfor %}
    </div>
    {{ knp_pagination_render(pagination, 'common/paginator.html.twig') }}
{% endblock %}

