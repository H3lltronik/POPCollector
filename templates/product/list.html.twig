{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <div class="product_page-title mb-lg-3">{{category|default("Todo")}}</div>
    <div class="row">
        {% for product in products %}
            {% if product.isVisible %}
                <div class="col-12 col-lg-3">
                    <el-link :underline="false" href="{{ path("product_details", {id: product.id}) }}">
                        <div class="d-flex flex-column">
                            <div class="product_small_image">
                                <img class="image-cover" src="{{asset('uploads/products/'~ product.images[0].name)}}" alt="">
                            </div>

                            <div class="product_small_title mt-lg-2">{{product.title}}</div>
                            <div class="product_small_price">${{product.price}}</div>
                        </div>
                    </el-link>
                </div>
                {% endif %}
        {% endfor %}
    </div>
    {{ knp_pagination_render(pagination) }}
{% endblock %}

{% block javascripts %}

{% endblock %}