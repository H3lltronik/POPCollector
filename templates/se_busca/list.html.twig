{% extends 'base.html.twig' %}

{% block title %}POPCollector{% endblock %}

{% block body %}
    <div class="product_page-title mb-lg-3">{{category|default("Todo")}}</div>
    <div class="row">
        {% for busqueda in busquedas %}
            {% if busqueda.isVisible %}
                <div class="col-12 col-lg-3">
                    <el-link :underline="false" href="{{ path("se_busca_details", {id: busqueda.id}) }}">
                        <div class="d-flex flex-column">
                            <div class="product_small_image">
                                <img class="image-cover" src="{{asset('uploads/busquedas/'~ busqueda.images[0].name)}}" alt="">
                            </div>

                            <div class="product_small_title mt-lg-2">{{busqueda.title}}</div>
                        </div>
                    </el-link>
                </div>
                {% endif %}
        {% endfor %}
    </div>
    {{ knp_pagination_render(pagination, 'common/paginator.html.twig') }}
{% endblock %}

{% block javascripts %}

{% endblock %}