{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form id="form" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Iniciar sesion</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-sm btn-primary" type="submit">
            Iniciar sesion
        </button>
        <button id="crearCuenta" class="btn btn-sm btn-info" type="button">
            Crear cuenta
        </button>
        <button id="recuperarCuenta" class="btn btn-sm btn-info" type="button">
            Recuperar contrase√±a
        </button>
    </form>
{% endblock %}

{% block javascripts %}
    <script>
        let vueIns = new Vue({
            el: "#form",
        })
        $(document).ready(() => {
            let crearUrl = "{{ path('home_create_account') }}"
            $("#crearCuenta").click(() => {
                location.href = crearUrl
            })

            let recuperaUrl = "{{ path('app_forgot_password_request') }}"
            $("#recuperarCuenta").click(() => {
                location.href = recuperaUrl
            })
        })

        {% for message in app.flashes('newAccount') %}
            vueIns.$notify({
                type: "info",
                message: "{{message}}",
                title: "Cuenta creada",
                showClose: false,
                duration: 7500,
            })
        {% endfor %}
    </script>
{% endblock %}